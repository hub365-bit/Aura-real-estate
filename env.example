# Aura App Environment Variables
# Copy this file to .env and fill in your actual values

# === API Configuration ===
EXPO_PUBLIC_API_BASE_URL=http://localhost:8081
EXPO_PUBLIC_ENV=development

# === Google Maps ===
EXPO_PUBLIC_GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here
EXPO_PUBLIC_GOOGLE_MAPS_IOS_API_KEY=your_ios_maps_key_here
EXPO_PUBLIC_GOOGLE_MAPS_ANDROID_API_KEY=your_android_maps_key_here

# === Stripe ===
EXPO_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key

# === Firebase (Push Notifications) ===
EXPO_PUBLIC_FIREBASE_API_KEY=your_firebase_api_key
EXPO_PUBLIC_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
EXPO_PUBLIC_FIREBASE_PROJECT_ID=your-project-id
EXPO_PUBLIC_FIREBASE_STORAGE_BUCKET=your-project.appspot.com
EXPO_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
EXPO_PUBLIC_FIREBASE_APP_ID=your_app_id

# === AdMob (Optional) ===
EXPO_PUBLIC_ADMOB_IOS_AD_UNIT_ID=ca-app-pub-xxxxx/xxxxx
EXPO_PUBLIC_ADMOB_ANDROID_AD_UNIT_ID=ca-app-pub-xxxxx/xxxxx

# === Backend Environment Variables (backend/.env) ===
# These should be in a separate backend/.env file

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/aura_db

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# M-Pesa (Daraja API)
MPESA_CONSUMER_KEY=your_mpesa_consumer_key
MPESA_CONSUMER_SECRET=your_mpesa_consumer_secret
MPESA_SHORTCODE=174379
MPESA_PASSKEY=your_mpesa_passkey
MPESA_ENV=sandbox

# Stripe (Backend)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key

# PayPal
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_SECRET=your_paypal_secret
PAYPAL_ENV=sandbox

# SMS Service (Africa's Talking)
AFRICASTALKING_API_KEY=your_africastalking_api_key
AFRICASTALKING_USERNAME=your_africastalking_username

# Email Service (Resend)
RESEND_API_KEY=your_resend_api_key
EMAIL_FROM=noreply@aura.app

# File Storage (Optional - AWS S3 or Cloudflare R2)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=aura-uploads

# Redis (Optional - for caching and queues)
REDIS_URL=redis://localhost:6379
